<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <section id="chat">
      <section id="request">
      <form id="questionForm">
          <input type="text" name="input" placeholder="Wpisz wiadomość">
          <button type="submit">Wyślij</button>
      </form>
      </section>
      <textarea id="response" placeholder="Otrzymaj odpowiedź"></textarea>
    </section>


    <script>
      const form = document.getElementById('questionForm');
      form.onsubmit = async function(event) {
        event.preventDefault();
        const formData = new FormData(form);
        const response = await fetch('/get-answer', {
          method: 'POST',
          body: formData
        });
        const result = await response.json();
        document.getElementById('response').value = result.answer;
      }
    </script>
</body>
</html>